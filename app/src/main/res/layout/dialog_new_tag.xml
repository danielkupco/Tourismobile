<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin_small"
            android:layout_marginTop="@dimen/tv_margin_large"
            android:hint="@string/hint_name">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tagName"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin_small"
            android:layout_marginTop="@dimen/tv_margin_large"
            android:hint="@string/hint_description">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tagDescription"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:lines="3"
                android:maxLines="7"
                android:gravity="top|start"
                android:scrollbars="vertical" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/dbpCanQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cb_dbp_property"
            android:layout_marginTop="@dimen/tv_margin_large"
            android:layout_gravity="center"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin_small"
            android:layout_marginTop="@dimen/tv_margin_large"
            android:hint="@string/hint_property">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tagProperty"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/tv_margin_small"
            android:layout_marginTop="@dimen/tv_margin_large"
            android:hint="@string/hint_value">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/tagValue"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</ScrollView>